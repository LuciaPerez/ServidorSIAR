<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>pathProjectServer</param-name>
        <param-value>myserver/webapps</param-value>
    </context-param>
    <context-param>
        <param-name>portPop3</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>hostEmail</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>addressEmail</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>pwdEmail</param-name>
        <param-value></param-value>
    </context-param>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>siar.servlet.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerNotificationsAutomatically</servlet-name>
        <servlet-class>siar.servlet.ControllerNotificationsAutomatically</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSearchActiveDirectory</servlet-name>
        <servlet-class>Servlet.ControllerSearchActiveDirectory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerNotificationsAutomatically</servlet-name>
        <url-pattern>/ControllerNotificationsAutomatically</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSearchActiveDirectory</servlet-name>
        <url-pattern>/ControllerSearchActiveDirectory</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
